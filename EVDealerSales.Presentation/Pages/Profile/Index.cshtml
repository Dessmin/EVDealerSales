@page
@model EVDealerSales.Presentation.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "My Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/testdrive.css" />
    <style>
        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .profile-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse"><path d="M 20 0 L 0 0 0 20" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
                opacity: 0.3;
            }

        .profile-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: #fff;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: 700;
            color: #667eea;
            margin-bottom: 1rem;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 1;
        }

        .profile-name {
            font-size: 1.75rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: 0.5rem;
            position: relative;
            z-index: 1;
        }

        .profile-role {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            color: #fff;
            font-weight: 500;
            backdrop-filter: blur(10px);
            position: relative;
            z-index: 1;
        }

        .info-card {
            background: #0a0a0a;
            border: 1px solid #1a1a1a;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

            .info-card h5 {
                color: #fff;
                margin-bottom: 1.5rem;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

                .info-card h5 i {
                    color: #667eea;
                }

        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid #1a1a1a;
        }

            .info-row:last-child {
                border-bottom: none;
            }

            .info-row .label {
                color: #888;
                font-size: 0.875rem;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

                .info-row .label i {
                    color: #667eea;
                }

            .info-row .value {
                color: #fff;
                font-weight: 500;
            }
    </style>
}

<div class="testdrive-container">
    <div class="container">
        <!-- Profile Header -->
        <div class="profile-header">
            @if (Model.UserProfile != null)
            {
                <div class="profile-avatar">
                    @Model.UserProfile.FullName.Substring(0, 1).ToUpper()
                </div>
                <div class="profile-name">@Model.UserProfile.FullName</div>
                <div class="profile-role">
                    <i class="fas fa-shield-alt"></i>
                    @Model.UserProfile.Role.ToString()
                </div>
            }
        </div>

        <!-- Alerts -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-testdrive success">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewData.ModelState.Root?.ValidationState.ToString()) && !ModelState.IsValid)
        {
            <div class="alert-testdrive error">
                <i class="fas fa-exclamation-circle"></i>
                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
            </div>
        }

        <div class="row">
            <!-- Account Information -->
            <div class="col-md-6">
                <div class="info-card">
                    <h5>
                        <i class="fas fa-user-circle"></i>
                        Account Information
                    </h5>
                    @if (Model.UserProfile != null)
                    {
                        <div class="info-row">
                            <div class="label">
                                <i class="fas fa-envelope"></i>
                                Email
                            </div>
                            <div class="value">@Model.UserProfile.Email</div>
                        </div>
                        <div class="info-row">
                            <div class="label">
                                <i class="fas fa-calendar-plus"></i>
                                Member Since
                            </div>
                            <div class="value">@Model.UserProfile.CreatedAt.ToString("MMMM dd, yyyy")</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Update Profile Form -->
            <div class="col-md-6">
                <div class="testdrive-card">
                    <div class="testdrive-card-header">
                        <h3>
                            <i class="fas fa-edit"></i>
                            Update Profile
                        </h3>
                    </div>
                    <div class="testdrive-card-body">
                        <form method="post" class="form-testdrive">
                            @Html.AntiForgeryToken()

                            <div class="form-group-testdrive">
                                <label class="form-label-testdrive" asp-for="UpdateProfileRequest.FullName">
                                    <i class="fas fa-user"></i>
                                    Full Name <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control-testdrive" asp-for="UpdateProfileRequest.FullName" required>
                                <span asp-validation-for="UpdateProfileRequest.FullName" class="text-danger"></span>
                            </div>

                            <div class="form-group-testdrive">
                                <label class="form-label-testdrive" asp-for="UpdateProfileRequest.PhoneNumber">
                                    <i class="fas fa-phone"></i>
                                    Phone Number <span class="text-danger">*</span>
                                </label>
                                <input type="tel" class="form-control-testdrive" asp-for="UpdateProfileRequest.PhoneNumber" required>
                                <span asp-validation-for="UpdateProfileRequest.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div style="border-top: 1px solid #1a1a1a; margin: 1.5rem 0; padding-top: 1.5rem;">
                                <h6 style="color: #888; margin-bottom: 1rem; font-size: 0.875rem;">
                                    <i class="fas fa-key"></i> Change Password (Optional)
                                </h6>

                                <div class="form-group-testdrive">
                                    <label class="form-label-testdrive" asp-for="UpdateProfileRequest.CurrentPassword">
                                        <i class="fas fa-lock"></i>
                                        Current Password
                                    </label>
                                    <input type="password" class="form-control-testdrive" asp-for="UpdateProfileRequest.CurrentPassword"
                                           placeholder="Enter current password if changing">
                                    <span asp-validation-for="UpdateProfileRequest.CurrentPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group-testdrive">
                                    <label class="form-label-testdrive" asp-for="UpdateProfileRequest.NewPassword">
                                        <i class="fas fa-key"></i>
                                        New Password
                                    </label>
                                    <input type="password" class="form-control-testdrive" asp-for="UpdateProfileRequest.NewPassword"
                                           placeholder="Enter new password (min 6 characters)">
                                    <span asp-validation-for="UpdateProfileRequest.NewPassword" class="text-danger"></span>
                                    <small class="form-text" style="color: #888; display: block; margin-top: 0.5rem;">
                                        Leave blank to keep current password
                                    </small>
                                </div>
                            </div>

                            <div style="display: flex; gap: 0.75rem;">
                                <button type="submit" class="btn-testdrive" style="flex: 1;">
                                    <i class="fas fa-save"></i> Update Profile
                                </button>
                                <a asp-page="/Index" class="btn-testdrive-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-hide alerts
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert-testdrive');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);
    </script>
}