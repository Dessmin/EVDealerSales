@page
@using EVDealerSales.BusinessObject.Enums
@model EVDealerSales.Presentation.Pages.Staff.ManageDeliveriesModel
@{
    ViewData["Title"] = "Manage Deliveries";
}

@section Styles {
    <link rel="stylesheet" href="~/css/testdrive.css" />
    <link rel="stylesheet" href="~/css/orders-delivery.css" />
}

<div class="testdrive-container">
    <div class="container-fluid">
        <!-- Header -->
        <div class="testdrive-header">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1>
                        <i class="bi bi-truck"></i>
                        Delivery Management
                    </h1>
                    <p class="header-subtitle">
                        Manage and track all order deliveries
                    </p>
                </div>
            </div>
        </div>

        <!-- Alerts -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Search and Filter Card -->
        <div class="testdrive-card">
            <div class="testdrive-card-header">
                <h3>
                    <i class="bi bi-funnel-fill"></i>
                    Search & Filters
                </h3>
                <button class="btn btn-sm btn-outline-secondary" type="button"
                        data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </div>
            <div class="collapse show" id="filterCollapse">
                <div class="testdrive-card-body">
                    <form method="get" class="form-testdrive">
                        <input type="hidden" name="pageNumber" value="1" />
                        <input type="hidden" name="pageSize" asp-for="PageSize" />

                        <!-- Search Term -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group-testdrive">
                                    <label class="form-label-testdrive">
                                        <i class="bi bi-search"></i>
                                        Search by Order Number, Customer Name or Email
                                    </label>
                                    <input type="text" class="form-control-testdrive" name="searchTerm"
                                           asp-for="SearchTerm"
                                           placeholder="Search deliveries...">
                                </div>
                            </div>
                        </div>

                        <!-- Status & Date Range -->
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group-testdrive">
                                    <label class="form-label-testdrive">
                                        <i class="bi bi-info-circle"></i>
                                        Delivery Status
                                    </label>
                                    <select class="form-control-testdrive" name="status" asp-for="Status">
                                        <option value="">All Status</option>
                                        <option value="0">Scheduled</option>
                                        <option value="1">In Transit</option>
                                        <option value="2">Delivered</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-testdrive">
                                    <label class="form-label-testdrive">
                                        <i class="bi bi-calendar"></i>
                                        From Date
                                    </label>
                                    <input type="date" class="form-control-testdrive" name="fromDate" asp-for="FromDate">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group-testdrive">
                                    <label class="form-label-testdrive">
                                        <i class="bi bi-calendar"></i>
                                        To Date
                                    </label>
                                    <input type="date" class="form-control-testdrive" name="toDate" asp-for="ToDate">
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div style="display: flex; gap: 0.75rem;">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Apply Filters
                            </button>
                            <a asp-page="ManageDeliveries" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Deliveries List Card -->
        <div class="testdrive-card">
            <div class="testdrive-card-header">
                <h3>
                    <i class="bi bi-list-ul"></i>
                    Deliveries
                </h3>
                @if (Model.Deliveries != null && Model.Deliveries.Any())
                {
                    <span style="color: #888; font-size: 0.875rem;">
                        @Model.Deliveries.TotalCount deliveries
                    </span>
                }
            </div>
            <div class="testdrive-card-body" style="padding: 0;">
                @if (Model.Deliveries == null || !Model.Deliveries.Any())
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="bi bi-inbox"></i>
                        </div>
                        <h3 class="empty-title">No Deliveries Found</h3>
                        <p class="empty-description">
                            @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.Status.HasValue)
                            {
                                <span>Try adjusting your search criteria or filters</span>
                            }
                            else
                            {
                                <span>No deliveries have been scheduled yet</span>
                            }
                        </p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order Number</th>
                                    <th>Customer</th>
                                    <th>Vehicle</th>
                                    <th>Shipping Address</th>
                                    <th>Planned Date</th>
                                    <th>Actual Date</th>
                                    <th>Status</th>
                                    <th style="width: 250px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var delivery in Model.Deliveries)
                                {
                                    <tr>
                                        <td>
                                            <strong>@delivery.OrderNumber</strong>
                                        </td>
                                        <td>
                                            <div>
                                                <div style="font-weight: 500;">
                                                    @delivery.CustomerName
                                                </div>
                                                <div style="color: #888; font-size: 0.875rem;">
                                                    @delivery.CustomerEmail
                                                </div>
                                                @if (!string.IsNullOrEmpty(delivery.CustomerPhone))
                                                {
                                                    <div style="color: #666; font-size: 0.75rem;">
                                                        <i class="bi bi-telephone"></i> @delivery.CustomerPhone
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div style="font-size: 0.875rem;">
                                                @delivery.VehicleInfo
                                            </div>
                                        </td>
                                        <td>
                                            <div style="font-size: 0.875rem;">
                                                @(delivery.ShippingAddress ?? "N/A")
                                            </div>
                                        </td>
                                        <td>
                                            @if (delivery.PlannedDate.HasValue)
                                            {
                                                <div>
                                                    <div style="font-weight: 500;">
                                                        @delivery.PlannedDate.Value.ToString("MMM dd, yyyy")
                                                    </div>
                                                    <div style="color: #888; font-size: 0.875rem;">
                                                        @delivery.PlannedDate.Value.ToString("hh:mm tt")
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not set</span>
                                            }
                                        </td>
                                        <td>
                                            @if (delivery.ActualDate.HasValue)
                                            {
                                                <div>
                                                    <div style="font-weight: 500;">
                                                        @delivery.ActualDate.Value.ToString("MMM dd, yyyy")
                                                    </div>
                                                    <div style="color: #888; font-size: 0.875rem;">
                                                        @delivery.ActualDate.Value.ToString("hh:mm tt")
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            @switch (delivery.Status)
                                            {
                                                case DeliveryStatus.Scheduled:
                                                    <span class="badge badge-warning">
                                                        <i class="bi bi-calendar-check"></i> Scheduled
                                                    </span>
                                                    break;
                                                case DeliveryStatus.InTransit:
                                                    <span class="badge badge-info">
                                                        <i class="bi bi-truck"></i> In Transit
                                                    </span>
                                                    break;
                                                case DeliveryStatus.Delivered:
                                                    <span class="badge badge-success">
                                                        <i class="bi bi-check-circle"></i> Delivered
                                                    </span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex gap-1">
                                                @if (delivery.Status == DeliveryStatus.Scheduled)
                                                {
                                                    <form method="post" asp-page-handler="UpdateStatus"
                                                          asp-route-id="@delivery.Id"
                                                          asp-route-status="@((int)DeliveryStatus.InTransit)"
                                                          style="display: inline;">
                                                        <button type="submit" class="btn btn-sm btn-info"
                                                                title="Mark as In Transit">
                                                            <i class="bi bi-truck"></i> Ship
                                                        </button>
                                                    </form>
                                                }

                                                @if (delivery.Status == DeliveryStatus.InTransit)
                                                {
                                                    <form method="post" asp-page-handler="UpdateStatus"
                                                          asp-route-id="@delivery.Id"
                                                          asp-route-status="@((int)DeliveryStatus.Delivered)"
                                                          style="display: inline;">
                                                        <button type="submit" class="btn btn-sm btn-success"
                                                                title="Mark as Delivered"
                                                                onclick="return confirm('Mark this delivery as completed?');">
                                                            <i class="bi bi-check-circle"></i> Deliver
                                                        </button>
                                                    </form>
                                                }

                                                <a asp-page="/Order/OrderDetail" asp-route-id="@delivery.OrderId"
                                                   class="btn btn-sm btn-outline-primary" title="View Order Details">
                                                    <i class="bi bi-eye"></i> View Order
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.Deliveries.TotalPages > 1)
                    {
                        <div style="padding: 1.5rem;">
                            <div class="pagination-testdrive">
                                @if (Model.Deliveries.HasPrevious)
                                {
                                    <a class="page-link-testdrive"
                                       asp-page="ManageDeliveries"
                                       asp-route-pageNumber="@(Model.PageNumber - 1)"
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-status="@Model.Status"
                                       asp-route-fromDate="@Model.FromDate"
                                       asp-route-toDate="@Model.ToDate">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                }

                                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.Deliveries.TotalPages, Model.PageNumber + 2); i++)
                                {
                                    <a class="page-link-testdrive @(Model.PageNumber == i ? "active" : "")"
                                       asp-page="ManageDeliveries"
                                       asp-route-pageNumber="@i"
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-status="@Model.Status"
                                       asp-route-fromDate="@Model.FromDate"
                                       asp-route-toDate="@Model.ToDate">
                                        @i
                                    </a>
                                }

                                @if (Model.Deliveries.HasNext)
                                {
                                    <a class="page-link-testdrive"
                                       asp-page="ManageDeliveries"
                                       asp-route-pageNumber="@(Model.PageNumber + 1)"
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-status="@Model.Status"
                                       asp-route-fromDate="@Model.FromDate"
                                       asp-route-toDate="@Model.ToDate">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                }
                            </div>

                            <div style="text-align: center; color: #888; font-size: 0.875rem; margin-top: 1rem;">
                                Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to
                                @Math.Min(Model.PageNumber * Model.PageSize, Model.Deliveries.TotalCount) of
                                @Model.Deliveries.TotalCount deliveries
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);

        // Toggle filter collapse icon
        document.querySelector('[data-bs-toggle="collapse"]')?.addEventListener('click', function() {
            const icon = this.querySelector('i');
            icon.classList.toggle('bi-chevron-down');
            icon.classList.toggle('bi-chevron-up');
        });
    </script>
}