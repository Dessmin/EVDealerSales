@page
@model EVDealerSales.Presentation.Pages.Order.PaymentSuccessModel
@{
    ViewData["Title"] = "Payment Successful";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" />
}

<div class="order-container">
    <div class="container">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Payment Verification Failed</h4>
                <p>@Model.ErrorMessage</p>
                <hr>
                <p class="mb-0">
                    <a asp-page="/Order/MyOrders" class="btn btn-primary">Go to My Orders</a>
                </p>
            </div>
        }
        else
        {
            <div class="success-page">
                <div class="success-animation">
                    <div class="success-checkmark">
                        <div class="check-icon">
                            <span class="icon-line line-tip"></span>
                            <span class="icon-line line-long"></span>
                            <div class="icon-circle"></div>
                            <div class="icon-fix"></div>
                        </div>
                    </div>
                </div>

                <h1 class="success-title">Processing Payment...</h1>
                <p class="success-message">
                    Please wait while we verify your payment. You will be redirected to your order details shortly.
                </p>

                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .success-page {
        text-align: center;
        padding: 3rem 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 3rem auto;
    }

    .success-animation {
        margin-bottom: 2rem;
    }

    .success-checkmark {
        width: 120px;
        height: 120px;
        margin: 0 auto;
        position: relative;
    }

    .check-icon {
        width: 120px;
        height: 120px;
        position: relative;
        border-radius: 50%;
        box-sizing: content-box;
        border: 4px solid #27ae60;
    }

    .icon-line {
        height: 6px;
        background-color: #27ae60;
        display: block;
        border-radius: 2px;
        position: absolute;
        z-index: 10;
    }

    .line-tip {
        top: 56px;
        left: 22px;
        width: 30px;
        transform: rotate(45deg);
        animation: icon-line-tip 0.75s;
    }

    .line-long {
        top: 50px;
        right: 14px;
        width: 54px;
        transform: rotate(-45deg);
        animation: icon-line-long 0.75s;
    }

    .icon-circle {
        top: -4px;
        left: -4px;
        z-index: 10;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        position: absolute;
        box-sizing: content-box;
        border: 4px solid rgba(39, 174, 96, 0.3);
    }

    .icon-fix {
        top: 12px;
        width: 8px;
        left: 32px;
        z-index: 1;
        height: 100px;
        position: absolute;
        transform: rotate(-45deg);
        background-color: white;
    }

    @@keyframes icon-line-tip {
        0% {
            width: 0;
            left: 2px;
            top: 26px;
        }
        54% {
            width: 0;
            left: 2px;
            top: 26px;
        }
        70% {
            width: 60px;
            left: -12px;
            top: 56px;
        }
        84% {
            width: 24px;
            left: 24px;
            top: 58px;
        }
        100% {
            width: 30px;
            left: 22px;
            top: 56px;
        }
    }

    @@keyframes icon-line-long {
        0% {
            width: 0;
            right: 56px;
            top: 60px;
        }
        65% {
            width: 0;
            right: 56px;
            top: 60px;
        }
        84% {
            width: 66px;
            right: 6px;
            top: 48px;
        }
        100% {
            width: 54px;
            right: 14px;
            top: 50px;
        }
    }

    .success-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #27ae60;
        margin: 1.5rem 0 1rem 0;
    }

    .success-message {
        font-size: 1.1rem;
        color: #546e7a;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .success-details {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 2rem 0;
        padding: 2rem;
        background: #f8f9fa;
        border-radius: 12px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 1rem;
        color: #2c3e50;
    }

    .detail-item i {
        font-size: 1.5rem;
        color: #27ae60;
    }

    .success-actions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 2rem;
    }

    .success-actions .btn {
        font-size: 1.1rem;
        padding: 1rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .success-actions .btn i {
        margin-right: 0.5rem;
    }

    @@media (max-width: 768px) {
        .success-page {
            padding: 2rem 1rem;
            margin: 1rem;
        }

        .success-title {
            font-size: 2rem;
        }

        .success-checkmark {
            width: 80px;
            height: 80px;
        }

        .check-icon {
            width: 80px;
            height: 80px;
        }
    }
</style>
