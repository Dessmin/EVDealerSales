@page
@model EVDealerSales.Presentation.Pages.Order.PaymentSuccessModel
@{
    ViewData["Title"] = "Payment Successful";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" />
}

<div class="order-container">
    <div class="container">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <div>
                    <h4 class="alert-heading">Payment Verification Failed</h4>
                    <p>@Model.ErrorMessage</p>
                    <hr>
                    <p class="mb-0">
                        <a asp-page="/Order/MyOrders" class="btn btn-primary">Go to My Orders</a>
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="success-page">
                <div class="success-animation">
                    <div class="success-checkmark">
                        <div class="check-icon">
                            <span class="icon-line line-tip"></span>
                            <span class="icon-line line-long"></span>
                            <div class="icon-circle"></div>
                            <div class="icon-fix"></div>
                        </div>
                    </div>
                </div>

                <h1 class="success-title">Processing Payment...</h1>
                <p class="success-message">
                    Please wait while we verify your payment. You will be redirected to your order details shortly.
                </p>

                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>