@page
@model EVDealerSales.Presentation.Pages.Order.CreateOrderModel
@{
    ViewData["Title"] = "Create Order";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" />
    <style>
        .create-order-clean {
            background: #000;
            min-height: 100vh;
            padding: 2rem 0;
        }

        .create-order-clean .checkout-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #1a1a1a;
        }

        .create-order-clean .checkout-header h1 {
            font-size: 2rem;
            font-weight: 700;
            color: #fff;
            margin: 1rem 0;
        }

        .create-order-clean .vehicle-section {
            background: transparent;
            border: none;
            padding: 0;
        }

        .create-order-clean .vehicle-preview-card {
            padding: 2rem;
            background: linear-gradient(135deg, #0a0a0a 0%, #111 100%);
            border: 1px solid #1a1a1a;
            border-radius: 16px;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .create-order-clean .vehicle-image-container {
            width: 100%;
            height: 250px;
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid #1a1a1a;
            margin-bottom: 1.5rem;
        }

        .create-order-clean .vehicle-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .create-order-clean .vehicle-info-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .create-order-clean .vehicle-title-section h3 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #fff;
            margin: 0 0 0.5rem 0;
        }

        .create-order-clean .vehicle-title-section .trim {
            font-size: 1.1rem;
            color: #888;
            margin: 0 0 0.25rem 0;
        }

        .create-order-clean .vehicle-title-section .year {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 1.5rem;
        }

        .create-order-clean .vehicle-specs-inline {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            padding: 1.5rem 0;
            border-top: 1px solid #1a1a1a;
            border-bottom: 1px solid #1a1a1a;
            margin-bottom: 1.5rem;
        }

        .create-order-clean .spec-inline {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #ccc;
            font-size: 0.95rem;
        }

        .create-order-clean .spec-inline i {
            color: #0070f3;
            font-size: 1.25rem;
            width: 24px;
        }

        .create-order-clean .price-stock-section {
            margin-top: auto;
        }

        .create-order-clean .stock-indicator {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .create-order-clean .price-label {
            font-size: 0.875rem;
            color: #888;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .create-order-clean .price-amount {
            font-size: 2rem;
            font-weight: 700;
            color: #f4f4f5;
        }

        .create-order-clean .order-form-section {
            background: transparent;
            border: none;
            padding: 0;
        }

        .create-order-clean .form-card {
            background: #0a0a0a;
            border: 1px solid #1a1a1a;
            border-radius: 16px;
            padding: 2rem;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .create-order-clean .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #fff;
            margin: 0 0 1.5rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .create-order-clean .section-title i {
            color: #0070f3;
        }

        .create-order-clean .info-notice {
            padding: 1rem 1.25rem;
            background: rgba(59, 130, 246, 0.05);
            border-left: 3px solid #3b82f6;
            border-radius: 8px;
            margin-bottom: 2rem;
        }

        .create-order-clean .info-notice p {
            margin: 0;
            color: #aaa;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .create-order-clean .form-group label {
            color: #ccc;
            font-weight: 500;
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .create-order-clean .form-group label i {
            color: #0070f3;
        }

        .create-order-clean .form-control {
            background: #111;
            border: 1px solid #1a1a1a;
            color: #fff;
            padding: 0.875rem 1rem;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .create-order-clean .form-control:focus {
            background: #1a1a1a;
            border-color: #0070f3;
            outline: none;
            box-shadow: 0 0 0 3px rgba(0, 112, 243, 0.1);
        }

        .create-order-clean .summary-section {
            padding: 1.5rem;
            background: linear-gradient(135deg, #0070f3 0%, #0060d3 100%);
            border-radius: 12px;
            margin-top: auto;
        }

        .create-order-clean .summary-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: rgba(255, 255, 255, 0.9);
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
        }

        .create-order-clean .summary-total {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            margin-top: 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            color: #fff;
            font-size: 1.25rem;
            font-weight: 700;
        }

        .create-order-clean .btn-submit {
            width: 100%;
            padding: 1rem 2rem;
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            border: none;
            color: #fff;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 10px;
            margin-top: 1.5rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            cursor: pointer;
        }

        .create-order-clean .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(34, 197, 94, 0.4);
        }

        .create-order-clean .btn-submit:disabled {
            background: #333;
            cursor: not-allowed;
            transform: none;
        }

        .create-order-clean .payment-note {
            text-align: center;
            margin-top: 1.5rem;
            padding: 1rem;
            background: rgba(59, 130, 246, 0.05);
            border-radius: 8px;
        }

        .create-order-clean .payment-note p {
            margin: 0;
            color: #888;
            font-size: 0.875rem;
            line-height: 1.6;
        }

        .create-order-clean .payment-note i {
            color: #22c55e;
            margin-right: 0.25rem;
        }

        @@media (max-width: 992px) {
            .create-order-clean .vehicle-preview-card,
            .create-order-clean .form-card {
                margin-bottom: 1.5rem;
            }
        }

        @@media (max-width: 768px) {
            .create-order-clean .vehicle-title-section h3 {
                font-size: 1.5rem;
            }

            .create-order-clean .price-amount {
                font-size: 1.75rem;
            }

            .create-order-clean .vehicle-image-container {
                height: 200px;
            }
        }
    </style>
}

<div class="create-order-clean">
    <div class="container">
        <div class="checkout-header">
            <a asp-page="/Vehicle/DetailVehicles" asp-route-id="@Model.Vehicle?.Id" class="btn-back">
                <i class="bi bi-arrow-left"></i> Back to Vehicle
            </a>
            <h1><i class="bi bi-bag-check"></i> Create Order</h1>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Vehicle != null)
        {
            <form method="post" asp-route-vehicleId="@Model.Vehicle.Id">
                <div class="row">
                    <!-- Vehicle Information - LEFT SIDE -->
                    <div class="col-lg-5">
                        <div class="vehicle-section">
                            <div class="vehicle-preview-card">
                                <div class="vehicle-image-container">
                                    <img src="@(string.IsNullOrEmpty(Model.Vehicle.ImageUrl) ? "/placeholder.svg" : Model.Vehicle.ImageUrl)" 
                                         alt="@Model.Vehicle.ModelName" />
                                </div>
                                <div class="vehicle-info-content">
                                    <div class="vehicle-title-section">
                                        <h3>@Model.Vehicle.ModelName</h3>
                                        <p class="trim">@Model.Vehicle.TrimName</p>
                                        @if (Model.Vehicle.ModelYear.HasValue)
                                        {
                                            <p class="year">@Model.Vehicle.ModelYear Model</p>
                                        }
                                    </div>

                                    <div class="vehicle-specs-inline">
                                        <div class="spec-inline">
                                            <i class="bi bi-battery-charging"></i>
                                            <span>@Model.Vehicle.BatteryCapacity kWh Battery Capacity</span>
                                        </div>
                                        <div class="spec-inline">
                                            <i class="bi bi-speedometer2"></i>
                                            <span>@Model.Vehicle.RangeKM km Range</span>
                                        </div>
                                        <div class="spec-inline">
                                            <i class="bi bi-lightning-charge"></i>
                                            <span>@Model.Vehicle.ChargingTime Charging Time</span>
                                        </div>
                                        <div class="spec-inline">
                                            <i class="bi bi-speedometer"></i>
                                            <span>@Model.Vehicle.TopSpeed km/h Top Speed</span>
                                        </div>
                                    </div>

                                    <div class="price-stock-section">
                                        <div class="stock-indicator" style="color: @(Model.Vehicle.Stock <= 0 ? "#ef4444" : Model.Vehicle.Stock <= 5 ? "#f59e0b" : "#22c55e")">
                                            <i class="bi bi-box-seam"></i>
                                            <span>@Model.Vehicle.Stock units @(Model.Vehicle.Stock <= 0 ? "- Out of Stock" : Model.Vehicle.Stock <= 5 ? "- Limited Stock" : "available")</span>
                                        </div>
                                        <div class="price-label">Vehicle Price</div>
                                        <div class="price-amount">$@Model.Vehicle.BasePrice.ToString("N0")</div>
                                    </div>
                                </div>
                            </div>

                            @if (Model.Vehicle.Stock <= 0)
                            {
                                <div class="alert alert-danger mt-3" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                    <strong>Out of Stock!</strong> This vehicle is currently unavailable for purchase.
                                </div>
                            }
                            else if (Model.Vehicle.Stock <= 5)
                            {
                                <div class="alert alert-warning mt-3" role="alert">
                                    <i class="bi bi-exclamation-circle-fill"></i>
                                    <strong>Limited Stock!</strong> Only @Model.Vehicle.Stock units remaining. Order now!
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Order Form - RIGHT SIDE -->
                    <div class="col-lg-7">
                        <div class="order-form-section">
                            <div class="form-card">
                                <h2 class="section-title">
                                    <i class="bi bi-clipboard-check"></i>
                                    Order Information
                                </h2>

                                <div class="info-notice">
                                    <p>
                                        <i class="bi bi-info-circle"></i>
                                        <strong>Note:</strong> You can request delivery and specify shipping address after completing the payment.
                                    </p>
                                </div>

                                <div class="form-group mb-4">
                                    <label for="notes">
                                        <i class="bi bi-chat-left-text"></i>
                                        Additional Notes (Optional)
                                    </label>
                                    <textarea asp-for="Notes" 
                                              class="form-control" 
                                              id="notes"
                                              rows="4"
                                              placeholder="Any special requests or comments about your order..."></textarea>
                                </div>

                                <div class="summary-section">
                                    <div class="summary-row">
                                        <span>Vehicle Price</span>
                                        <span>$@Model.Vehicle.BasePrice.ToString("N0")</span>
                                    </div>
                                    <div class="summary-total">
                                        <span>Total Amount</span>
                                        <span>$@Model.Vehicle.BasePrice.ToString("N0")</span>
                                    </div>
                                </div>

                                @if (Model.Vehicle.Stock > 0)
                                {
                                    <button type="submit" class="btn-submit">
                                        <i class="bi bi-credit-card"></i>
                                        Proceed to Payment
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn-submit" disabled>
                                        <i class="bi bi-x-circle"></i>
                                        Out of Stock - Cannot Proceed
                                    </button>
                                }

                                <div class="payment-note">
                                    <p>
                                        <i class="bi bi-shield-check"></i>
                                        After creating your order, you will be redirected to the secure payment page. 
                                        Your order will be confirmed once the payment is successfully completed.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-resize textareas
        document.querySelectorAll('textarea').forEach(textarea => {
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        });
    </script>
}
