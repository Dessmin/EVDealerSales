@page "{id:guid}"
@using EVDealerSales.BusinessObject.DTOs.VehicleDTOs
@model EVDealerSales.Presentation.Pages.Vehicle.EditModel
@{
    ViewData["Title"] = $"Edit {Model.Vehicle.ModelName} {Model.Vehicle.TrimName}";
}

@section Styles {
    <head>
        <link rel="stylesheet" href="~/css/employee.css" />
    </head>
}

    <div class="employee-container">
        <div class="container-fluid">
            <div class="employee-header">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1>
                            <i class="fas fa-edit"></i>
                            Edit Vehicle
                        </h1>
                        <p style="color: #666; margin: 0.5rem 0 0 0; font-size: 0.875rem;">
                            Update vehicle information and specifications
                        </p>
                    </div>
                    <div class="header-actions">
                        <a asp-page="./Details" asp-route-id="@Model.Vehicle.Id" class="btn-modern">
                            <i class="fas fa-eye"></i>
                            View Details
                        </a>
                        <a asp-page="./Index" class="btn-modern-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Back to List
                        </a>
                    </div>
                </div>
            </div>

            <div class="employee-card">
                <div class="employee-card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert-modern error">
                            <i class="fas fa-exclamation-circle"></i>
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: #000; border: 1px solid #333; border-radius: 8px; margin-bottom: 1.5rem;">
                        <div style="width: 60px; height: 60px; border-radius: 6px; overflow: hidden; background: #1a1a1a;">
                            <img src="@Model.Vehicle.ImageUrl" alt="@Model.Vehicle.ModelName" style="width: 100%; height: 100%; object-fit: cover;" />
                        </div>
                        <div style="flex: 1;">
                            <h2 style="color: #fff; font-size: 1.25rem; margin: 0 0 0.25rem 0;">
                                @Model.Vehicle.ModelName @Model.Vehicle.TrimName
                            </h2>
                            <p style="color: #666; font-size: 0.75rem; margin: 0;">
                                ID: @Model.Vehicle.Id | Year: @Model.Vehicle.ModelYear
                            </p>
                        </div>
                        <div>
                            <span class="status-badge @(Model.Vehicle.IsActive ? "active" : "inactive")">
                                @(Model.Vehicle.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>

                    <form method="post" class="form-modern">
                        <div asp-validation-summary="ModelOnly" class="alert-modern error" style="@(ViewData.ModelState.IsValid ? "display: none;" : "display: flex;")">
                            <i class="fas fa-exclamation-circle"></i>
                        </div>

                        <input type="hidden" asp-for="Vehicle.Id" />

                        <div style="margin-bottom: 1.5rem;">
                            <h3 style="color: #ccc; margin-bottom: 1rem; font-size: 1rem; font-weight: 500; border-bottom: 1px solid #333; padding-bottom: 0.5rem;">
                                <i class="fas fa-info-circle"></i> Basic Information
                            </h3>

                            <div class="form-row-modern">
                                <div class="form-group-modern">
                                    <label asp-for="Vehicle.ModelName" class="form-label-modern">Model Name</label>
                                    <input asp-for="Vehicle.ModelName" class="form-control-modern" placeholder="e.g., Model S, Mustang Mach-E" />
                                    <span asp-validation-for="Vehicle.ModelName" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                                </div>
                                <div class="form-group-modern">
                                    <label asp-for="Vehicle.TrimName" class="form-label-modern">Trim Level</label>
                                    <input asp-for="Vehicle.TrimName" class="form-control-modern" placeholder="e.g., Long Range, Premium" />
                                    <span asp-validation-for="Vehicle.TrimName" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                                </div>
                            </div>

                            <div class="form-row-modern">
                                <div class="form-group-modern">
                                    <label asp-for="Vehicle.ModelYear" class="form-label-modern">Model Year</label>
                                    <input asp-for="Vehicle.ModelYear" class="form-control-modern" type="number" min="2020" max="2030" placeholder="e.g., 2024" />
                                    <span asp-validation-for="Vehicle.ModelYear" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                                </div>
                                <div class="form-group-modern">
                                    <label asp-for="Vehicle.BasePrice" class="form-label-modern">Base Price ($)</label>
                                    <input asp-for="Vehicle.BasePrice" class="form-control-modern" type="number" step="0.01" min="0" placeholder="e.g., 45000" />
                                    <span asp-validation-for="Vehicle.BasePrice" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                                </div>
                            </div>

                            <div class="form-group-modern">
                                <label asp-for="Vehicle.ImageUrl" class="form-label-modern">Image URL</label>
                                <input asp-for="Vehicle.ImageUrl" class="form-control-modern" type="url" placeholder="https://example.com/vehicle-image.jpg" />
                                <span asp-validation-for="Vehicle.ImageUrl" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                                <div style="font-size: 0.75rem; color: #666; margin-top: 0.25rem;">
                                    <i class="fas fa-info-circle"></i> Provide a direct URL to the vehicle image
                                </div>
                            </div>
                        </div>

                        <div style="margin-bottom: 1.5rem;">
                            <h3 style="color: #ccc; margin-bottom: 1rem; font-size: 1rem; font-weight: 500; border-bottom: 1px solid #333; padding-bottom: 0.5rem;">
                                <i class="fas fa-bolt"></i> Electric Vehicle Specifications
                            </h3>

                            <div class="form-row-modern">
                                <div class="form-group-modern">
                                    <label asp-for="Vehicle.BatteryCapacity" class="form-label-modern">
                                        <i class="fas fa-battery-full" style="color: #0070f3;"></i> Battery Capacity (kWh)
                                    </label>
                                    <input asp-for="Vehicle.BatteryCapacity" class="form-control-modern" type="number" min="1" placeholder="e.g., 75" />
                                </div>
                                <div class="form-group-modern">
                                    <label asp-for="Vehicle.RangeKM" class="form-label-modern">
                                        <i class="fas fa-road" style="color: #00d4aa;"></i> Range (km)
                                    </label>
                                    <input asp-for="Vehicle.RangeKM" class="form-control-modern" type="number" min="0" placeholder="e.g., 500" />
                                    <span asp-validation-for="Vehicle.RangeKM" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                                </div>
                            </div>

                            <div class="form-row-modern">
                                <div class="form-group-modern">
                                    <label asp-for="Vehicle.ChargingTime" class="form-label-modern">
                                        <i class="fas fa-charging-station" style="color: #ff6b35;"></i> Charging Time (minutes)
                                    </label>
                                    <input asp-for="Vehicle.ChargingTime" class="form-control-modern" type="number" min="0" placeholder="e.g., 30" />
                                    <span asp-validation-for="Vehicle.ChargingTime" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                                    <div style="font-size: 0.75rem; color: #666; margin-top: 0.25rem;">
                                        Time to charge from 10% to 80% (fast charging)
                                    </div>
                                </div>
                                <div class="form-group-modern">
                                    <label asp-for="Vehicle.TopSpeed" class="form-label-modern">
                                        <i class="fas fa-tachometer-alt" style="color: #ff6b35;"></i> Top Speed (km/h)
                                    </label>
                                    <input asp-for="Vehicle.TopSpeed" class="form-control-modern" type="number" min="0" placeholder="e.g., 250" />
                                    <span asp-validation-for="Vehicle.TopSpeed" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                                </div>
                            </div>
                        </div>

                        <div style="margin-bottom: 1.5rem;">
                            <h3 style="color: #ccc; margin-bottom: 1rem; font-size: 1rem; font-weight: 500; border-bottom: 1px solid #333; padding-bottom: 0.5rem;">
                                <i class="fas fa-box"></i> Inventory Management
                            </h3>

                            <div class="form-group-modern">
                                <label asp-for="Vehicle.Stock" class="form-label-modern">
                                    <i class="fas fa-warehouse" style="color: #00d4aa;"></i> Stock Quantity
                                </label>
                                <input asp-for="Vehicle.Stock" class="form-control-modern" type="number" min="0" placeholder="e.g., 10" />
                                <span asp-validation-for="Vehicle.Stock" class="text-danger" style="font-size: 0.75rem; margin-top: 0.25rem; display: block;"></span>
                                <div style="font-size: 0.75rem; color: #666; margin-top: 0.25rem;">
                                    <i class="fas fa-info-circle"></i> Available units for sale
                                </div>
                            </div>
                        </div>

                        <div style="margin-bottom: 1.5rem;">
                            <h3 style="color: #ccc; margin-bottom: 1rem; font-size: 1rem; font-weight: 500; border-bottom: 1px solid #333; padding-bottom: 0.5rem;">
                                <i class="fas fa-cog"></i> Availability Settings
                            </h3>

                            <div class="form-group-modern">
                                <div style="display: flex; align-items: center; gap: 0.75rem; background: #000; padding: 0.75rem; border-radius: 6px; border: 1px solid #333;">
                                    <input asp-for="Vehicle.IsActive" class="form-check-input" type="checkbox" style="width: 16px; height: 16px; accent-color: #0070f3;" />
                                    <label asp-for="Vehicle.IsActive" class="form-label-modern" style="margin: 0; cursor: pointer; font-size: 0.875rem;">
                                        Vehicle Active
                                        <div style="font-size: 0.75rem; color: #666; margin-top: 0.25rem;">
                                            Control availability for browsing and purchase
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div style="display: flex; gap: 0.75rem; justify-content: flex-end; padding-top: 1rem; border-top: 1px solid #333;">
                            <a asp-page="./Index" class="btn-modern-secondary">
                                Cancel
                            </a>
                            <a asp-page="./Details" asp-route-id="@Model.Vehicle.Id" class="btn-modern-secondary">
                                <i class="fas fa-eye"></i>
                                View Details
                            </a>
                            <button type="submit" class="btn-modern">
                                <i class="fas fa-save"></i>
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{
            <partial name="_ValidationScriptsPartial" />
    }
        <script>
            document.querySelector('form').addEventListener('submit', function() {
                const submitBtn = this.querySelector('button[type="submit"]');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving Changes...';
            });

            setTimeout(function () {
                const alerts = document.querySelectorAll('.alert-modern');
                alerts.forEach(alert => alert.style.display = 'none');
            }, 5000);
        </script>
}
