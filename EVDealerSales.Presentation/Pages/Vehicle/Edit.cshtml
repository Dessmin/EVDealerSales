@page "{id:guid}"
@model EVDealerSales.Presentation.Pages.Vehicle.EditModel
@{
    ViewData["Title"] = "Edit Vehicle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>
                        Edit Vehicle
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.Vehicle == null)
                    {
                        <div class="alert alert-danger">Vehicle not found.</div>
                        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    }
                    else
                    {
                        <form method="post">
                            <input type="hidden" asp-for="Vehicle.Id" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Vehicle.ModelName" class="form-label"></label>
                                    <input asp-for="Vehicle.ModelName" class="form-control" />
                                    <span asp-validation-for="Vehicle.ModelName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Vehicle.TrimName" class="form-label"></label>
                                    <input asp-for="Vehicle.TrimName" class="form-control" />
                                    <span asp-validation-for="Vehicle.TrimName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Vehicle.ModelYear" class="form-label"></label>
                                    <input asp-for="Vehicle.ModelYear" class="form-control" type="number" />
                                    <span asp-validation-for="Vehicle.ModelYear" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Vehicle.BasePrice" class="form-label"></label>
                                    <input asp-for="Vehicle.BasePrice" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Vehicle.BasePrice" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Vehicle.ImageUrl" class="form-label"></label>
                                <input asp-for="Vehicle.ImageUrl" class="form-control" />
                                <span asp-validation-for="Vehicle.ImageUrl" class="text-danger"></span>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Vehicle.BatteryCapacity" class="form-label"></label>
                                    <input asp-for="Vehicle.BatteryCapacity" class="form-control" type="number" />
                                    <span asp-validation-for="Vehicle.BatteryCapacity" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Vehicle.RangeKM" class="form-label"></label>
                                    <input asp-for="Vehicle.RangeKM" class="form-control" type="number" />
                                    <span asp-validation-for="Vehicle.RangeKM" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Vehicle.ChargingTime" class="form-label"></label>
                                    <input asp-for="Vehicle.ChargingTime" class="form-control" type="number" />
                                    <span asp-validation-for="Vehicle.ChargingTime" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Vehicle.TopSpeed" class="form-label"></label>
                                    <input asp-for="Vehicle.TopSpeed" class="form-control" type="number" />
                                    <span asp-validation-for="Vehicle.TopSpeed" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3 form-check">
                                <input asp-for="Vehicle.IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="Vehicle.IsActive" class="form-check-label"></label>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Update Vehicle
                                </button>
                                <a asp-page="Index" class="btn btn-secondary">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Cancel
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}