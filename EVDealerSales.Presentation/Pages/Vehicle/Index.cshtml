@page
@using EVDealerSales.BusinessObject.DTOs.VehicleDTOs
@using EVDealerSales.Business.Utils
@model EVDealerSales.Presentation.Pages.Vehicle.IndexModel
@{
    ViewData["Title"] = "Vehicle Management";
}

@section Styles {
    <head>
        <link rel="stylesheet" href="~/css/vehicle.css" />
    </head>
}

    <div class="vehicle-container">
        <div class="container-fluid">
            <div class="vehicle-header">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1>
                            <i class="fas fa-car-side"></i>
                            Vehicle Inventory
                        </h1>
                        <p style="color: #666; margin: 0.5rem 0 0 0; font-size: 0.875rem;">
                            Manage your electric vehicle inventory and specifications
                        </p>
                    </div>
                    <div class="header-actions">
                        <a asp-page="./Create" class="btn-modern">
                            <i class="fas fa-plus"></i>
                            Add Vehicle
                        </a>
                    </div>
                </div>
            </div>

            <div class="vehicle-card">
                <div class="vehicle-card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert-modern success">
                            <i class="fas fa-check-circle"></i>
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert-modern error">
                            <i class="fas fa-exclamation-circle"></i>
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form method="get" class="search-container">
                        <div class="flex-grow-1">
                            <input type="text"
                                   class="search-modern"
                                   name="SearchTerm"
                                   value="@Model.SearchTerm"
                                   placeholder="Search by model or trim..." />
                        </div>
                        <div class="search-filters">
                            <select name="SortBy" class="form-control-modern" style="width: auto; min-width: 150px;">
                                <option value="">Sort By</option>
                                <option value="ModelName" selected="@(Model.SortBy == "ModelName")">Model Name</option>
                                <option value="ModelYear" selected="@(Model.SortBy == "ModelYear")">Model Year</option>
                                <option value="BasePrice" selected="@(Model.SortBy == "BasePrice")">Base Price</option>
                            </select>
                            <select name="SortDesc" class="form-control-modern" style="width: auto; min-width: 120px;">
                                <option value="false" selected="@(!Model.SortDesc)">Ascending</option>
                                <option value="true" selected="@Model.SortDesc">Descending</option>
                            </select>
                            <button type="submit" class="btn-modern">
                                <i class="fas fa-search"></i>
                                Search
                            </button>
                            @if (!string.IsNullOrEmpty(Model.SearchTerm))
                            {
                                <a asp-page-handler="ClearFilters" class="btn-modern-secondary">
                                    <i class="fas fa-times"></i>
                                </a>
                            }
                        </div>
                    </form>

                    <div class="table-modern">
                        <table>
                            <thead>
                                <tr>
                                    <th style="width: 80px;">Image</th>
                                    <th>Vehicle</th>
                                    <th>Specifications</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                    <th style="width: 150px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Vehicles.TotalCount == 0)
                                {
                                    <tr>
                                        <td colspan="6" style="text-align: center; padding: 3rem; color: #666;">
                                            <div style="margin-bottom: 1rem;">
                                                <i class="fas fa-car-side" style="font-size: 2rem; color: #333;"></i>
                                            </div>
                                            <div style="font-size: 1rem; margin-bottom: 0.5rem; color: #ccc;">No vehicles found</div>
                                            <div style="font-size: 0.875rem;">
                                                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                                                {
                                                    <span>Try adjusting your search criteria</span>
                                                }
                                                else
                                                {
                                                    <span>Get started by adding your first vehicle</span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var vehicle in Model.Vehicles)
                                    {
                                        <tr>
                                            <td>
                                                <div class="vehicle-thumbnail">
                                                    <img src="@vehicle.ImageUrl" alt="@vehicle.ModelName" />
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <div style="font-weight: 500; color: #fff; font-size: 0.875rem;">
                                                        @vehicle.ModelName @vehicle.TrimName
                                                    </div>
                                                    <div style="font-size: 0.75rem; color: #666;">
                                                        @vehicle.ModelYear
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div style="display: flex; gap: 1rem; font-size: 0.75rem; flex-wrap: wrap;">
                                                    <div>
                                                        <i class="fas fa-battery-full" style="color: #0070f3;"></i>
                                                        @vehicle.BatteryCapacity kWh
                                                    </div>
                                                    <div>
                                                        <i class="fas fa-road" style="color: #00d4aa;"></i>
                                                        @vehicle.RangeKM km
                                                    </div>
                                                    <div>
                                                        <i class="fas fa-tachometer-alt" style="color: #ff6b35;"></i>
                                                        @vehicle.TopSpeed km/h
                                                    </div>
                                                    <div style="@(vehicle.Stock <= 0 ? "color: #ef4444;" : vehicle.Stock <= 5 ? "color: #ffa500;" : "color: #00d4aa;")">
                                                        <i class="fas fa-warehouse"></i>
                                                        @vehicle.Stock units
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div style="font-weight: 500; color: #0070f3; font-size: 0.875rem;">
                                                    $@vehicle.BasePrice.ToString("N0")
                                                </div>
                                            </td>
                                            <td>
                                                <span class="status-badge @(vehicle.IsActive ? "active" : "inactive")">
                                                    @(vehicle.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="action-buttons">
                                                    <a asp-page="./Details"
                                                       asp-route-id="@vehicle.Id"
                                                       class="btn-action view"
                                                       title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-page="./Edit"
                                                       asp-route-id="@vehicle.Id"
                                                       class="btn-action edit"
                                                       title="Edit Vehicle">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button"
                                                            class="btn-action delete"
                                                            onclick="showDeleteModal('@vehicle.Id', '@vehicle.ModelName @vehicle.TrimName')"
                                                            title="Delete Vehicle">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Vehicles.TotalPages > 1)
                    {
                        <div class="pagination-modern">
                            @if (Model.Vehicles.HasPrevious)
                            {
                                <a class="page-link"
                                   asp-page="./Index"
                                   asp-route-PageNumber="@(Model.Vehicles.CurrentPage - 1)"
                                   asp-route-PageSize="@Model.Vehicles.PageSize"
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-SortBy="@Model.SortBy"
                                   asp-route-SortDesc="@Model.SortDesc">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            }

                            @for (var i = Math.Max(1, Model.Vehicles.CurrentPage - 2); i <= Math.Min(Model.Vehicles.TotalPages, Model.Vehicles.CurrentPage + 2); i++)
                            {
                                <a class="page-link @(i == Model.Vehicles.CurrentPage ? "active" : "")"
                                   asp-page="./Index"
                                   asp-route-PageNumber="@i"
                                   asp-route-PageSize="@Model.Vehicles.PageSize"
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-SortBy="@Model.SortBy"
                                   asp-route-SortDesc="@Model.SortDesc">
                                    @i
                                </a>
                            }

                            @if (Model.Vehicles.HasNext)
                            {
                                <a class="page-link"
                                   asp-page="./Index"
                                   asp-route-PageNumber="@(Model.Vehicles.CurrentPage + 1)"
                                   asp-route-PageSize="@Model.Vehicles.PageSize"
                                   asp-route-SearchTerm="@Model.SearchTerm"
                                   asp-route-SortBy="@Model.SortBy"
                                   asp-route-SortDesc="@Model.SortDesc">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="modal-overlay" id="deleteModal" style="display: none;">
        <div class="modal-content" style="max-width: 500px;">
            <div class="modal-header">
                <h3>Confirm Delete</h3>
                <button class="modal-close" onclick="hideDeleteModal()">×</button>
            </div>
            <div class="modal-body">
                <div style="background: rgba(238, 0, 0, 0.1); border: 1px solid #e00; border-radius: 6px; padding: 0.75rem; margin-bottom: 1rem;">
                    <div style="color: #e00; font-weight: 500; margin-bottom: 0.25rem; font-size: 0.875rem;">
                        <i class="fas fa-exclamation-triangle"></i> Warning
                    </div>
                    <div style="color: #ccc; font-size: 0.75rem;">
                        This action cannot be undone. The vehicle will be permanently removed from the system.
                    </div>
                </div>

                <p id="deleteMessage" style="margin-bottom: 1rem; color: #ccc; font-size: 0.875rem;"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-modern-secondary" onclick="hideDeleteModal()">Cancel</button>
                <form id="deleteForm" method="post" asp-page-handler="Delete" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteVehicleId" />
                    <button type="submit" class="btn-modern-danger">
                        <i class="fas fa-trash"></i>
                        Delete Vehicle
                    </button>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
        <script>
            function showDeleteModal(vehicleId, vehicleName) {
                const modal = document.getElementById('deleteModal');
                const form = document.getElementById('deleteForm');
                const message = document.getElementById('deleteMessage');
                const hiddenId = document.getElementById('deleteVehicleId');

                hiddenId.value = vehicleId;
                message.innerHTML = `Are you sure you want to delete <strong style="color: #0070f3;">${vehicleName}</strong>?`;

                modal.style.display = 'flex';
            }

            function hideDeleteModal() {
                document.getElementById('deleteModal').style.display = 'none';
            }

            document.getElementById('deleteModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    hideDeleteModal();
                }
            });

            setTimeout(function () {
                const alerts = document.querySelectorAll('.alert-modern');
                alerts.forEach(alert => alert.style.display = 'none');
            }, 5000);
        </script>
}
